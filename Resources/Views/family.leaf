

#extend("base")

#export("head") {
<title>#(label.family_title)</title>


}

#export("body") {

<div class="uk-visible" uk-sticky>
<nav class="uk-navbar-container navbar-top-color" uk-navbar style="background-color:rgba(40,138,237,0.8); height:50px;">
<div class="uk-navbar-left"><a href="#"> #(label.family_title)</a></div>
<div class="uk-navbar-right"></div>
</nav>
</div>

<div class="uk-padding-small"></div>

<div class="container">
<div uk-grid>
<div class="uk-width-1-4"></div>
<div class="uk-width-1-2">

<div class="bs-callout bs-callout-uikit">
<h4>#(label.dancers_title)</h4>

#(label.dancers_instruction)

</div>

#if(warning){
<div class="bs-callout bs-callout-warning">
<h4>#(label.warning)</h4>
#(warning)
</div>
}

#if(errors){
<div class="bs-callout bs-callout-danger">
<h4>#(label.error)</h4>
#(errors)
</div>
}
<div class="uk-padding-small"></div>

<table class="uk-table uk-table-divider uk-table-hover">
<thead>
    <tr>
            <th>#(label.first_name)</th><th>#(label.last_name)</th><th>#(label.date_of_birth)</th><th>#(label.gender)</th><th>#(label.action)</th>
    </tr>
</thead>
#loop(family, "members") {

    <tr>
        <td>#(members.FirstName)</td>
        <td>#(members.LastName)</td>
        <td>#(members.FormattedDoB)</td>
        <td>#(members.Gender)</td>
        <td>
            <a href="/family/#(familyid)/dancer/#(members.id)" uk-icon="icon: pencil"></a>
            <a href="/family/#(familyid)/dancer/#(members.id)/delete" uk-icon="icon: trash"></a>
</tr>

}
</table>

<a href="/family/#(familyid)/dancer" class="uk-button uk-button-default">#(label.add_another_dancer)</a>

<form action="" method="POST" class="uk-form-stacked">




<div class="uk-margin">




<a href="/family/#(familyid)/lessons" class="uk-button uk-button-primary uk-align-right">#(label.select_lessons)</a>

</form>
</div>

<div class="uk-width-1-4"></div>
</div>


}
